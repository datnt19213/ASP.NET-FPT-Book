@{
    ViewBag.Title = "Home Page";
}

@model IEnumerable<FPTBookProject.Models.Book>
<div id="wrapper">
    <div class="CSSgal">

        <!-- Don't wrap targets in parent -->
        <s id="s1"></s>
        <s id="s2"></s>
        <s id="s3"></s>
        <s id="s4"></s>

        <div class="slider">

            @{
                int i = 0;
                foreach (var book in Model)
                {
                    i = i+1;
                    if (i == 1)
                    {
                        <div style="background:#5b8;">
                            <img class="slide" src="~/Content/Book images/@book.Img" alt="" />
                            <h2></h2>
                        </div>
                    }
                    if (i == 2)
                    {
                        <div style="background: #85b;">
                            <img class="slide" src="~/Content/Book images/@book.Img" alt="" />
                            <h2></h2>
                        </div>
                    }
                    if (i == 3)
                    {
                        <div style="background: #e95;">
                            <img class="slide" src="~/Content/Book images/@book.Img" alt="" />
                            <h2></h2>
                        </div>
                    }
                    if (i == 4)
                    {
                        <div style="background: #e59;">
                            <img class="slide" src="~/Content/Book images/@book.Img" alt="" />
                            <h2></h2>
                        </div>
                    }
                    if(i == 5)
                    {
                        break;
                    }
                }
            }
        </div>

        <div class="prevNext">
            <div><a href="#s4"></a><a href="#s2"></a></div>
            <div><a href="#s1"></a><a href="#s3"></a></div>
            <div><a href="#s2"></a><a href="#s4"></a></div>
            <div><a href="#s3"></a><a href="#s1"></a></div>
        </div>

        <div class="bullets">
            <a href="#s1"></a>
            <a href="#s2"></a>
            <a href="#s3"></a>
            <a href="#s4"></a>
        </div>
    </div>
</div>
<div class="book-block">
    <h2 class="book-lb">Best Sellers Books</h2>
    <div class="book-ls">
        @foreach (var book in Model)
        {
            <div class="book">
                <img src="~/Content/Book images/@book.Img" alt="" class="book-img">
                <p class="infor">Title: @book.BookName</p>
                <p class="infor">Author: @book.Author.AuthorName</p>
                <p class="infor">Price: @book.Price</p>
                <a href="@Url.Action("Add", "Cart", book)" class="add-cart-btn" style="text-decoration: none;">

                    <img src="~/Content/images/add-to-cart.png" alt="" style="margin-top: 10px; width: 30px; height: 30px;"><p class="addcart-btn" style="color:black;">Add to cart</p>
                </a>
            </div>
        }
    </div>
</div>

