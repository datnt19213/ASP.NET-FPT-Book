@model FPTBookProject.Models.Publisher

@{
    ViewBag.Title = "EditPublisher";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="wrapper">

    @using (Html.BeginForm("EditPublisher", "ManagePublisher", FormMethod.Post, new { @class = "login-form", role = "form" }))
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @style = "color: red" })
        <div class="header">
            <h2 class="header-login">Update Publisher</h2>
        </div>

        <div class="login-items">

            <div class="username-password-items">
                @Html.ValidationSummary(true, "", new { @style = "color: red" })
                @Html.HiddenFor(model => model.PublisherId)

                <p>@Html.LabelFor(m => m.PublisherName, new { @class = "header-input-item" })</p>
                @Html.TextBoxFor(m => m.PublisherName, new { @class = "input-item" })
                @Html.ValidationMessageFor(model => model.PublisherName, "", new { @style = "color: red" })

                <p>@Html.LabelFor(m => m.Description, new { @class = "header-input-item" })</p>
                @Html.TextBoxFor(m => m.Description, new { @class = "input-item" })
                @Html.ValidationMessageFor(model => model.Description, "", new { @style = "color: red" })
            </div>

            <div style="margin-bottom:5%;" class="btn-item">
                <button type="submit" class="submit-btn1">Update</button>
                <a href="@Url.Action("Index", "ManagePublisher")">
                    <button type="button" class="submit-btn1" style="color: #191919">
                        Cancel
                    </button>
                </a>
            </div>
        </div>

    }
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>